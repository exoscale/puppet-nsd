<%- if @enable -%>
# Remote control config section.
remote-control:
        control-enable: yes
  <%- unless @interface.nil? -%>
    <%- if @interface.is_a?(Array) -%>
      <%- @interface.each do |i| -%>
        control-interface: <%= i %>
      <%- end -%>
    <%- else -%>
        control-interface: <%= @interface %>
    <%- end -%>
  <%- end -%>
  <%- unless @port.nil? -%>
        control-port: <%= @port %>
  <%- end -%>
  <%- unless @server_key.nil? -%>
        server-key-file: "<%= @server_key %>"
  <%- end -%>
  <%- unless @server_cert.nil? -%>
        server-cert-file: "<%= @server_cert %>"
  <%- end -%>
  <%- unless @control_key.nil? -%>
        control-key-file: "<%= @control_key %>"
  <%- end -%>
  <%- unless @control_cert.nil? -%>
        control-cert-file: "<%= @control_cert %>"
  <%- end -%>
<%- end -%>
