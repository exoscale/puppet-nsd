<%- unless @options.empty? -%>
# options for the nsd server
server:
  <%- @options.sort.map do |key, value| -%>
    <%- if value.is_a?(Array) -%>
      <%- value.each do |value_i| -%>
        <%= key %>: <%= value_i %>
      <%- end -%>
    <%- else -%>
        <%= key %>: <%= value %>
    <%- end -%>
  <%- end -%>
<%- end -%>

